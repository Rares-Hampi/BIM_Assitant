# Development Dockerfile for Backend with hot-reload
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies including nodemon for hot-reload
RUN npm install && npm install -g nodemon

# Create necessary directories
RUN mkdir -p uploads output_web new/output_web

# Expose port
EXPOSE 3000

# Start with nodemon for hot-reload
CMD ["nodemon", "--watch", ".", "--ext", "js,json", "index.js"]
